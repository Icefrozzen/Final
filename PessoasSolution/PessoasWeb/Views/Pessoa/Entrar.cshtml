@using PessoasWeb.Models
@model Pessoa
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/favicon.ico">

    <title>Entrar</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <link href="~/Content/SimpleSideBar.css" rel="stylesheet">

    <script src="~/scripts/ie-emulation-modes-warning.js"></script>

</head>

<body>

    <div class="container">

        <form class="form-signin" action="~/Pessoa/Entrar" method="post" role="form">
            <h2 class="form-signin-heading">Enter into Vid.Nu</h2>

            <label for="inputEmail" class="sr-only">E-mail</label>
            @*<input type="email" id="inputEmail" class="form-control" placeholder="E-mail" required autofocus>*@
            @Html.TextBoxFor(e => e.Email, new { @class = "form-control", @placeholder = "E-mail", @required = "required"})
            <br />

            <label for="inputPassword" class="sr-only">Senha</label>
            @*<input type="password" id="inputPassword" class="form-control" placeholder="Senha" required>*@
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control control-label", @minlength = "6", @required = "required", @maxlength = "16", @placeholder = "Password"})

            <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>
            <h5> Do Not Have An Account? <a href="/Pessoa/Create"> Register </a> </h5>
        </form>

    </div> <!-- /container -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="~/scripts/ie10-viewport-bug-workaround.js"></script>
</body>
</html>
